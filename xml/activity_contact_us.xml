<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.s1.cumminsapp.ContactUs"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#BDBDBD"
            android:id="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView1"
            android:src="@drawable/maharshi_karve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="culture"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/gandhaar" />


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dr. Madhuri Khambete"
        android:textColor="#ffffff"
        android:textSize="21sp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\nPrincipal,\nMKSSS’s Cummins College of Engineering for\nWomen, Karvenagar, Pune – 411052
"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/text2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text7"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:text="\nEmail : principal@cumminscollege.org"
        android:layout_below="@+id/text3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:background="#80CBC4"
        android:layout_below="@id/text7"/>
    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n\nCollege Contact No – 020- 25311000, 25477211\nFax No. – 25311499\n\nOffice Timings – 9.30 to 5.15\n(2nd and 4th Saturday Holiday)"
        android:textColor="#e0e0e0"
        android:textSize="18sp"
        android:layout_below="@+id/text7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>



    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#84ffff"
        android:text="@string/contact_us"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_below="@+id/text4"

        android:layout_marginTop="33dp" />


    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      for more details.."
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_marginRight="75dp"
        android:layout_alignBaseline="@+id/text5"
        android:layout_alignBottom="@+id/text5"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"/>



    </LinearLayout>
</ScrollView>
