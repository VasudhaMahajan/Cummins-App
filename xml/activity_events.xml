<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context="com.s1.cumminsapp.Events"
    android:id="@+id/s_layout">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GANDHAAR"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:onClick="gandhaar"
            android:id="@+id/gandhaar"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#BDBDBD"
            android:id="@+id/txtView" />

        <VideoView
        android:id="@+id/video1"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#BDBDBD"
            android:id="@+id/textView3" />

        <Button
            android:padding="10dp"
            android:layout_margin="15dp"
            android:background="#80CBC4"
            android:layout_gravity="center"
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click to play" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baha"
            android:onClick="baha"
            android:id="@+id/baha"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#BDBDBD"
            android:id="@+id/textView4" />

        <VideoView
            android:id="@+id/video2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#BDBDBD"
            android:id="@+id/textView5" />

        <Button
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click to play"
            android:background="#80CBC4"
            />
        <TextView
            android:id="@+id/showMore"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For more videos "
            android:textColor="#ffffff"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/showMore1"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/More_Videos"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>
