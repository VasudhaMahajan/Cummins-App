<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   android:background="#000000"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#BDBDBD"
        android:id="@+id/textView3" />
    <EditText
        android:textColor="#ffffff"
        android:backgroundTint="#80CBC4"
        android:id="@+id/Labname"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="50dp"
        android:inputType="text"
        android:hint="Lab Name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/LabLocation"
        android:layout_alignStart="@+id/LabLocation"
        android:layout_marginTop="48dp" />


    <EditText
        android:textColor="#ffffff"
        android:backgroundTint="#80CBC4"
        android:id="@+id/Departmentname"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="100dp"
        android:inputType="text"
        android:hint="Department Name"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/Labname"
        android:layout_alignLeft="@+id/LabLocation"
        android:layout_alignStart="@+id/LabLocation" />

    <EditText
        android:textColor="#ffffff"
        android:backgroundTint="#80CBC4"
        android:id="@+id/LabLocation"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="100dp"
        android:inputType="text"
        android:hint="Lab location"
        android:layout_below="@+id/Departmentname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <Button

        android:backgroundTint="#80CBC4"
        android:id="@+id/btnAddL"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="100dp"
        android:text="add"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignBaseline="@+id/btnModifyL"
        android:layout_alignBottom="@+id/btnModifyL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:backgroundTint="#80CBC4"
        android:id="@+id/btnDeleteL"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="200dp"
        android:text="delete"
        android:layout_alignBaseline="@+id/btnModifyL"
        android:layout_alignBottom="@+id/btnModifyL"
        android:layout_centerHorizontal="true" />

    <Button
        android:backgroundTint="#80CBC4"
        android:id="@+id/btnModifyL"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="250dp"
        android:text="modify"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/LabLocation"
        android:layout_toLeftOf="@+id/LabLocation"
        android:layout_toStartOf="@+id/LabLocation" />


</RelativeLayout>