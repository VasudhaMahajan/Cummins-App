<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#000000">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#BDBDBD"
        android:id="@+id/textView3" />

    <EditText
        android:gravity="center"
        android:backgroundTint="#80CBC4"
        android:hint="Lab Name"
        android:textColor="#ffffff"
        android:id="@+id/searchLab"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="50dp"
        android:inputType="text"
        android:layout_marginBottom="91dp"
        android:layout_above="@+id/btnViewL1"
        android:layout_centerHorizontal="true" />


    <Button
        android:background="#80CBC4"
        android:id="@+id/btnViewL1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="250dp"
        android:text="Specific Search"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Display All"
        android:background="#80CBC4"
        android:id="@+id/btnViewAllL1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="300dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_alignTop="@+id/btnViewL1" />


</RelativeLayout>